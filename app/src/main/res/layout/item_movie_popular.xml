<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="133.3dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="133.3dp"
        android:layout_height="200dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie_img"
            android:layout_width="133.3dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularBorder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/itemMovie"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/my_ripple"
            android:clickable="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:focusable="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:orientation="vertical">
        <customfonts.TextViewDosisBold
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="18sp"
            tools:text="Predator" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <customfonts.TextViewDosisRegular
                android:id="@+id/movie_release_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                tools:text="2021" />

            <customfonts.TextViewDosisRegular
                android:id="@+id/movie_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:drawableTint="#1C8519"
                android:drawableStart="@drawable/ic_baseline_people_alt_24"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="5.0" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>